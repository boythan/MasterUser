<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_user"
            android:layout_gravity="center"
            android:textSize="@dimen/text_large"
            android:padding="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:background="@drawable/shape_border_view"
            android:gravity="center"
            android:hint="@string/user_name"
            android:padding="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:textColor="@color/black"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_xsmall"
                android:layout_weight="1"
                android:background="@drawable/shape_border_line_right"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_xsmall"
                android:layout_weight="1"
                android:background="@drawable/shape_border_left"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text="@string/oke"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>